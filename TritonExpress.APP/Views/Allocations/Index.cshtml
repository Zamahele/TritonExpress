@model IEnumerable<TritonExpress.API.Domain.Entities.Allocation>

@{
    ViewData["Title"] = "Index";
}

<h4 style="text-align:center">Allocations</h4>

<p>
    <a asp-action="Create" class="btn btn-primary btn-sm">Create New</a>
</p>
<table class="table table-striped" id="Datatable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WayBill)
            </th>
             <th style="text-align:center">
                Action
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Vehicle.Make)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WayBill.WaybillNo)
            </td>

            <td style="text-align:center">
                <a asp-action="Edit" asp-route-id="@item.AllocationId" class="btn btn-warning btn-sm">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.AllocationId" class="btn btn-info btn-sm">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.AllocationId" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
